{
  "id": null,
  "uid": "database-health",
  "title": "Database Health",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Average query duration (pg_stat_statements)",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "sum(rate(pg_stat_statements_sum_time_seconds[5m])) / sum(rate(pg_stat_statements_calls_total[5m]))",
          "legendFormat": "mean ms",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Slow query rate (>1s)",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "sum(rate(pg_stat_statements_calls_total[5m]) and on (datname,queryid) pg_stat_statements_mean_time_seconds > 1)",
          "legendFormat": "slow calls/min",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "min": 0
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Connection pool usage",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "pg_stat_activity_count{state=\"active\"}",
          "legendFormat": "active",
          "refId": "A"
        },
        {
          "expr": "pg_stat_activity_count{state=\"idle\"}",
          "legendFormat": "idle",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "type": "table",
      "title": "Top table sizes",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "topk(10, pg_stat_relation_size_bytes)",
          "format": "table",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        },
        "overrides": []
      },
      "options": {
        "showHeader": true
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    }
  ]
}
