{
  "id": null,
  "uid": "backend-observability",
  "title": "Backend Observability",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "HTTP latency (p50/p95/p99)",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "min": 0
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Error rate by route (5m)",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "100 * (sum by (route) (rate(http_requests_total{outcome!\"success\"}[5m])) / sum by (route) (rate(http_requests_total[5m])))",
          "legendFormat": "{{route}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        },
        "overrides": []
      },
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Active DB connections",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "database_connections_active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 15 },
              { "color": "red", "value": 18 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 9
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Redis connections in use",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "redis_connections_active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "red", "value": 5 }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 6,
        "y": 9
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "Process memory usage",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes",
          "min": 0
        },
        "overrides": []
      },
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 9
      }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Active subscriptions",
      "datasource": {
        "type": "prometheus",
        "uid": "love-prom"
      },
      "targets": [
        {
          "expr": "subscription_active_count",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        },
        "overrides": []
      },
      "gridPos": {
        "h": 6,
        "w": 6,
        "x": 0,
        "y": 15
      }
    }
  ]
}
