{
  "name": "@love-parser/backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run src/__tests__/database src/__tests__/jobs src/__tests__/services src/__tests__/utils src/routes",
    "test:integration": "vitest run src/__tests__/integration",
    "test:coverage": "vitest run --coverage",
    "db:wait": "tsx src/scripts/waitForDatabase.ts",
    "redis:healthcheck": "tsx src/scripts/redisHealthcheck.ts",
    "db:migrate": "knex migrate:latest --knexfile knexfile.cjs",
    "db:rollback": "knex migrate:rollback --knexfile knexfile.cjs",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.2",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^9.1.0",
    "bull": "^4.13.1",
    "dotenv": "^16.4.7",
    "fastify": "^4.28.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "pg": "^8.13.1",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "telegram": "^2.26.22",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.16.5",
    "@types/supertest": "^2.0.16",
    "eslint": "^9.32.0",
    "globals": "^15.15.0",
    "pg-mem": "^3.0.5",
    "supertest": "^6.3.4",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite-tsconfig-paths": "^5.1.2",
    "vitest": "^2.1.5"
  }
}
